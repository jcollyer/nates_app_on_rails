<div class="row" id="books">
  <div class="small-12 large-4 columns">
    <div class="small_center">
      <br><br>
      {{#linkTo "books.show" this}}
        <img {{bindAttr src="imageLargeUrl"}} class="image" />
      {{/linkTo}}
      <br><br><br>
       {{! buylink}}
       <a href="http://www.amazon.com/The-No-Nonsense-Biblical-Nate-Holdridge/dp/1484053508" target="_blank" class="button" style="margin:0px 0 30px 100px">amazon</a>
     </div>
   </div>
   <div class="small-12 large-8 columns">
    <div class="small_center">
      <h1 style="text-align:left; margin:30px 0 0 0px;">{{title}}</h1>
      <p style="margin:0px;">by &nbsp; <span class="hh2">Nate Holdridge</span></p>
      {{#linkTo "books.show" this}}
        <h2 class="books_summary background_color_two box">
          {{summary}}
        </h2>
      {{/linkTo}}
    </div>
   <div class="background_color_two box">
    <p>{{context}}</p>
  </div>
  </div>

</div>
