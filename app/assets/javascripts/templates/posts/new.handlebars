<div class="form_box">
  <h1>Create New Post</h1>
  <form>
    <div>
      <label {{bindAttr for="titleField.elementId"}}>Title</label>
      {{view Ember.TextField valueBinding='title' name='title' viewName='titleField'}}
    </div>
    <div>
      <label {{bindAttr for='summaryField.elementId'}}>Summary</label>
      {{view Ember.TextField valueBinding='summary' name='summary' viewName='summaryField'}}
    </div>
    <div>
      <label {{bindAttr for='summaryField.elementId'}}>Summary</label>
      {{view Ember.TextField valueBinding='context' name='context' viewName='contextField'}}
    </div>
  </form>
</div>

<div class="view_bar">
  <div class="vew_bar_right">
    <a href='#' {{action cancel}} class='button'>Cancel</a>
  </div>
  <div class="vew_bar_right">
    <a href='#' {{action save}} class='button'>Create</a>
  </div>
</div>
