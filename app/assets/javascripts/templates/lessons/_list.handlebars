<div class="small-6 large-3 columns lessons_list" alt="this">
  <div class="play_mark_medium play_button paused">
    <div class="play_this_lesson_mp3">{{mp3}}</div>
    <div class="play_this_lesson_title" style="display:none">{{title}}</div>
    <div class="play_this_lesson_refurl" style="display:none">{{refurl}}</div>
    {{! <div class="play_this_lesson_date" style="display:none">{{date}} {{! </div> }}
  </div>
  {{#linkTo "lessons.show" this}}
    <img {{bindAttr src="imageMediumUrl"}} class="play_this_lesson_image">
    <h2 class="lessons_summary">
     {{!  <span class="hh2">{{title}} {{!</span><br> }}
      {{summary}}
    </h2>
    {{! <h3>{{date}} {{! </h3> }}
  {{/linkTo}}
  <h3>{{title}}</h3>
{{!    <a href='#' {{action 'destroy'}} {{! class="button">Delete</a>
   <div class="edit_this_lesson">
     {{#view App.EditLessons}}
       {{! <span class="button">
        Edit
        <span class="edit_this_button">{{id}} {{! </span>
       </span>

     {{/view}}
   {{! </div>  }}



</div>
