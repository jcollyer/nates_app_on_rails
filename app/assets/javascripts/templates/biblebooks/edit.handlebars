<div class="view_bar">
  <div class="vew_bar_right">
    <a href='#' {{action cancel target='controller' }} class="button">Cancel</a>
  </div>
  <div class="vew_bar_right">
    <a href='#' {{action 'destroy'}} class="button">Delete</a>
  </div>
  <div class="vew_bar_right">
    <a href='#' {{action save}} class='button'>Update</a>
  </div>
</div>

<div class="form_box">
  <h1>Edit Biblebook Info</h1>
  <form>
    <div>
      <label {{bindAttr for="nameField.elementId"}}>Name</label>
      {{view Ember.TextField valueBinding='name' name='name' viewName='nameField'}}
    </div>
  </form>
</div>

