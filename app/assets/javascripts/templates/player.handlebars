<div id="lesson_mod">
  <div id="lesson_mod_menu" class="row">


    <div id="jquery_jplayer_1" class="jp-jplayer">
      {{! AUDIO ELEMENT }}
    </div>
    <div id="jp_container_1" class="jp-audio small-12 large-6 columns" itemscope itemtype="http://schema.org/Lesson">
      <div class="jp-controls">
        <div class="lesson_mod_image">
          <a href="javascript:;" class="jp-play" tabindex="1">
            <div class="current_lessen_image">
              <img src="/assets/placeholder.png" class="mod_img" itemprop="image">
              <div class="play_mark_small"></div>
            </div>
          </a>
          <a href="javascript:;" class="jp-pause" tabindex="1" style="display:none;">
            <img src="/assets/placeholder.png" class="mod_img">
            <div class="pause_mark_small"></div>
          </a>
        </div>
        <div class="lesson_mod_controls">
          <div class="lesson_mod_time">
            <div class="jp-current-time lesson_current_time"></div>
            <div class="jp-duration lesson_duration"></div>
          </div>
          <div class="jp-progress lesson_progress_bar">
            <div class="jp-seek-bar"><div class="jp-play-bar progress_bar"></div></div>
          </div>
          <div class="lesson_mod_volume">
            <div class="lesson_mod_volume_controls">
              <a href="javascript:;" class="icon-volume jp-mute" tabindex="1" title="mute">&nbsp;</a>
              <a href="javascript:;" class="icon-volume jp-unmute" tabindex="1" title="unmute" style="display:none;">&nbsp;</a>
            </div>
            <div class="volume-meter jp-volume-bar">
              <span class="volume-bar jp-volume-bar-value"></span>
            </div>
            <div class="lesson_mod_volume_max">
              <a href="javascript:;" class="icon-volume jp-volume-max" tabindex="1" title="max volume">&nbsp;</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="lesson_mod_info_container small-8 large-5 columns">
      <div class="lesson_mod_info" itemprop="name">
        <div class="mod_share"></div>
      </div>

      <div class="social_buttons">
        <div class="social_icon social_facebook">
          <a href="#"
            onclick="
              window.open(
                'https://www.facebook.com/sharer/sharer.php?u='+encodeURIComponent(location.href),
                'facebook-share-dialog',
                'width=626,height=436');
              return false;">
          </a>
        </div>
        <div class="social_icon social_twitter">
          <a class="twitter popup" href="http://twitter.com/share?text=Tweet%20about%20Nate's%20teachings."></a>

          <script>
            $('.popup').click(function(event) {
              var width  = 575,
                  height = 400,
                  left   = 0,
                  top    = 0,
                  url    = this.href,
                  opts   = 'status=1' +
                           ',width='  + width  +
                           ',height=' + height +
                           ',top='    + top    +
                           ',left='   + left;

              window.open(url, 'twitter', opts);

              return false;
            });
          </script>
        </div>
        <div class="social_icon social_google">
          <a href="https://plus.google.com/share?url={nateholdridge.com}" onclick="javascript:window.open(this.href,
            '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
            &nbsp;
          </a>
        </div>
      </div>

    </div>

    <div class="player_action_container small-4 large-1 columns">

      <div class="player_close_button">x</div>

      <div class="player_refurl_button">
        <a href="" class="player_refurl" target="_blank">&nbsp;</a>
      </div>
      <div class="player_download_button">
        <a href="" id="player_download_url" download="Nate's teaching">&nbsp;</a>
      </div>

    </div>





  </div>
</div>
